<style type="text/css">
    img {
        width: 30px;
        height: 30px;
        border: 1px red solid;
        float: right;
        margin-right: 10px;
    }

    #divcartqty input {
        width: 50px;
        height: 30px;
    }

    .footer {
        background-color: lightgray;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 50px;
        float: left;
        margin-top: 100px;
    }

    .footer p{
        line-height:50px;
    }
</style>

@{
    string session = (string)ViewData["session"];
    string customer = (string)ViewData["customername"];
    string cartQty = (string)ViewData["CartQty"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VendorSoft</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @{ if (customer == null)
                    {
                        <b><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">VendorSoft</a></b>
                    }
                    else
                    {
                        <b><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Welcome @customer!</a></b>
                    }
                }
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @{ if (session == null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="assemblecart">View Cart</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="assemblecart">View Cart</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Purchase" asp-action="index">My Purchases</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Logout" asp-action="Index">Log Out</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
                <div id="carticon">
                    <img src="~/images/carticon.png" name="carticon" />
                </div>
                <div id="divcartqty">
                    @{ if (cartQty == null)
                        {
                        <input type="button" size="20" style="width:auto;text-align:center; font-weight:bold; border:none;background:content-box" name="cartqty" id="cartqty" value="0" readonly />
                        }
                        else
                        {
                        <input type="button" size="20" style="width:auto;text-align:center; font-weight:bold; border:none;background:content-box" name="cartqty" id="cartqty" value="@cartQty" readonly />
                        }
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer">

        <p align="center">&copy; 2020 - VendorSoft - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
